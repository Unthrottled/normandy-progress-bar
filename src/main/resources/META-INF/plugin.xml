<idea-plugin>
  <id>io.acari.normandy.progress.bar</id>
  <name>SSV Normandy Progress Bar</name>
  <version>1.0</version>
  <vendor email="alexsimons9999@gmail.com" url="https://acari.io">cyclic-reference</vendor>

  <description><![CDATA[
      The SSV Normandy SR-1 traveling at FTL becomes your progress bar.
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="183.4588.61"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="io.acari.n7.config.ConfigurationPersistence"/>
    <applicationConfigurable instance="io.acari.n7.config.ui.NormandyConfigComponent"
                             groupId="appearance"
                             id="io.acari.n7.config"/>
  </extensions>

<application-components>
  <component>
    <implementation-class>io.acari.n7.NormandyComponent</implementation-class>
  </component>
  <component>
    <implementation-class>io.acari.n7.NormandyIntegrationComponent</implementation-class>
  </component>
</application-components>
  
  <actions>
    <action class="io.acari.n7.actions.ConfigAction"
            id="Config Action"
            text="SSV Normandy Configuration"
            icon="/alliance.svg">
      <add-to-group group-id="ToolsMenu"/>
      <add-to-group group-id="MainToolBar" anchor="last"/>
      <add-to-group group-id="ChangeScheme" anchor="last"/>
    </action>
  </actions>
  
</idea-plugin>